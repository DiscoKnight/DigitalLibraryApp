<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroudgradient">

    <Button
        android:id="@+id/addButton"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_margin="@dimen/mainFragmentButtonMargin"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="@dimen/mainFragmentButtonPadding"
        android:background="@drawable/roundedbutton"
        android:gravity="center|center_horizontal"
        android:padding="@dimen/mainFragmentButtonPadding"
        android:text="@string/addString"
        app:layout_constraintRight_toLeftOf="@id/horizontalGuideline"
        app:layout_constraintBottom_toBottomOf="@id/verticalGuideLine"/>

    <Button
        android:id="@+id/viewButton"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_margin="@dimen/mainFragmentButtonMargin"
        android:background="@drawable/roundedbutton"
        android:padding="@dimen/mainFragmentButtonPadding"
        android:text="@string/viewMenuItem"
        app:layout_constraintLeft_toLeftOf="@id/horizontalGuideline"
        app:layout_constraintBottom_toTopOf="@id/verticalGuideLine" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_margin="@dimen/mainFragmentButtonMargin"
        android:background="@drawable/roundedbutton"
        android:padding="@dimen/mainFragmentButtonPadding"
        android:text="Delete"
        app:layout_constraintLeft_toLeftOf="@id/horizontalGuideline"
        app:layout_constraintTop_toBottomOf="@id/verticalGuideLine"/>

    <Button
        android:id="@+id/editButton"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_margin="@dimen/mainFragmentButtonMargin"
        android:background="@drawable/roundedbutton"
        android:padding="@dimen/mainFragmentButtonPadding"
        android:text="Edit"
        app:layout_constraintRight_toLeftOf="@id/horizontalGuideline"
        app:layout_constraintTop_toBottomOf="@id/verticalGuideLine" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        />

    <include layout="@layout/toolbarbuttom"/>


</androidx.constraintlayout.widget.ConstraintLayout>