<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroudgradient">

    <Button
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addString"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/mainFragmentButtonMargin"
        android:padding="@dimen/mainFragmentButtonPadding"
        android:gravity="center_horizontal"
        android:background="@drawable/roundedbutton"/>

    <Button
        android:id="@+id/viewButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addButton"
        android:layout_margin="@dimen/mainFragmentButtonMargin"
        android:padding="@dimen/mainFragmentButtonPadding"
        android:text="@string/viewMenuItem"
        android:background="@drawable/roundedbutton"/>

    <Button
        android:id="@+id/editButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/viewButton"
        android:layout_margin="@dimen/mainFragmentButtonMargin"
        android:padding="@dimen/mainFragmentButtonPadding"
        android:text="Edit"
        android:background="@drawable/roundedbutton"/>

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editButton"
        android:layout_margin="@dimen/mainFragmentButtonMargin"
        android:padding="@dimen/mainFragmentButtonPadding"
        android:text="Delete"
        android:background="@drawable/roundedbutton"/>

</androidx.constraintlayout.widget.ConstraintLayout>